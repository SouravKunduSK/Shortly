@model RegisterVM;

@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4 class="form-header text-center">Register your new account on Shortly!</h4>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-controller="Authentication"
                      asp-action="RegisterUser">

                      <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label for="fullName">Full Name</label>
                        <input asp-for="FullName" type="text" class="form-control" id="fullName" placeholder="Enter Your Full Name..." />
                    </div>

                    <div class="form-group mb-3">
                        <label for="emailAddress">Email Address</label>
                        <input asp-for="EmailAddress" type="email" class="form-control" id="emailAddress" placeholder="Enter Your Email..." />
                        <small id="emailAddressSm" class="form-text text-muted">We'll never share your email.</small>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">
                            Password
                        </label>
                        <input asp-for="Password" type="password" class="form-control" 
                                                  id="password" placeholder="Enter Your Password..." />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="confirmPassword">
                            Confirm Password
                        </label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Re-Enter Your Password..." />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-success mt-2 btn-register">
                        Register
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
