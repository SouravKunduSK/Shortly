@model LoginVM;
@{
    ViewData["Title"] = "Login";
}

<div>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4 class="form-header text-center">Log in to your account!</h4>

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <form asp-controller="Authentication"
                          asp-action="LoginSubmitted">

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label for="emailAddress">Email Address</label>
                            <input type="email" asp-for="EmailAddress" class="form-control" id="emailAddress" placeholder="Enter Your Email..." />
                            <small id="emailAddressSm" class="form-text text-muted">We'll never share your email.</small> <br />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">
                                Password
                            </label>
                            <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Enter Your Password..." />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-outline-success mt-2 btn-login">
                            Log in
                        </button>
                    </form>
                </div>
            </div>
            <hr />
            <div class="row pt-2">
                <div class="col-md-8 offset-md-2">
                    <h5>External login</h5>
                    @if (Model.Schemes != null && Model.Schemes.Count() != 0)
                    {
                        <form asp-action="ExternalLogin">
                            <div>
                                @foreach (var provider in Model.Schemes)
                                {
                                    <button type="submit"
                                            class="btn btn-primary"
                                            name="provider"
                                            value="@provider.Name"
                                            title="Login using your @provider.Name account">
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                        
                    }
                    else
                    {
                        <div>No external login providers have configured</div>
                    }
                </div>
            </div>
    </div>
</div>
</div>

